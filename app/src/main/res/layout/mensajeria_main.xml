<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mail"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="24dp"
        android:id="@+id/destinatario"
        android:hint="E-mail:"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:ems="10"
        android:layout_below="@+id/destinatario"
        android:layout_alignParentStart="true"
        android:id="@+id/asunto"
        android:hint="Asunto:"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:ems="10"
        android:layout_below="@+id/asunto"
        android:layout_alignParentStart="true"
        android:id="@+id/mensaje"
        android:hint="Escriba su mensaje:"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sobres"
        android:layout_below="@+id/mensaje"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:id="@+id/enviarCorreo"
        android:backgroundTint="@android:color/background_light" />

    <TextView
        android:text="JNB UTILES APPs, una contribución para docentes de EBR; envíe un mensaje a: jnavarrobenito@gmail.com\n\nEsperamos sus contribuciones y sugerencias."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enviarCorreo"
        android:layout_marginTop="23dp"
        android:id="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
